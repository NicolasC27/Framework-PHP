{% extends 'layout.twig' %}

{% block body %}

    <h1>Welcome on the students list</h1><br />
    <a href="{{ path('student.add') }}"><button>add a student</button></a>
    <table style="width:100%">
        <th>Students name</th>
        <th>School(s) name</th>
        {% for student in students %}
            <tr>
                <td>{{ student.name }}</td>
                {% if (student.school) is null %}
                    <td>ANY SCHOOL</td>
                {% else %}
                    <td>{{ student.school }}</td>
                {% endif %}
            </tr>

        {% endfor %}
    </table>

    <style>
        table, th, td {
            text-align: center;
            border: 1px solid black;
        }
    </style>
{% endblock %}